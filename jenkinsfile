pipeline {
    agent any

    stages {
        stage("Clone Git Repository") {
            steps {
                dir("C:/space") {
                    script {
                        // Check if the directory is a Git repository
                        def isGitRepo = fileExists(".git")

                        // If not a Git repository, initialize one
                        if (!isGitRepo) {
                            echo "Initializing Git repository..."
                            gitInit()
                        }

                        // Fetch the repository from GitHub
                        git(
                            url: "https://github.com/hey1501/Demo.git",
                            branch: "main",
                            changelog: true,
                            poll: true
                        )
                    }
                }
            }
        }
        // Add more stages if needed
    }
}
